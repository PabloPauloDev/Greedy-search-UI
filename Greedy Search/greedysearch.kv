<MeuLayout>

    GridLayout:


        cols: 1  # Define o número de colunas
        rows: 2  # Define o número de linhas
        spacing: 10  # Define o espaçamento entre os widgets
        size: root.width, root.height

        GridLayout:
            cols: 2
            rows: 2

            Label:
                text: "Escolha a cidade de origem:"
                size: self.texture_size
                
            Spinner:
                id: origem
                values: "Arad", "Zerind", "Sibiu", "Timisoara", "Oradea", "Fagaras", "Rimnicu", "Lugoj", "Mehadia", "Dobreta", "Craiova", "Pitesti", "Bucharest", "Giurgiu"


            Label:
                text: "Escolha a cidade de destino:"
                size: self.texture_size
                
            Spinner:
                id: destino
                values: "Arad", "Zerind", "Sibiu", "Timisoara", "Oradea", "Fagaras", "Rimnicu", "Lugoj", "Mehadia", "Dobreta", "Craiova", "Pitesti", "Bucharest", "Giurgiu"


        GridLayout:
            cols: 2
            rows: 1

            GridLayout:
                cols:1
                rows:2

                Button:
                    text: "Gerar Rota"
                    on_press: root.buscar()

                Button:
                    text: "Exibir Grafo"
                    on_press: root.grafo()
                
            ScrollView:
                size: root.width, root.height

                Label:
                    id: label_resp
                    text: root.texto_resp
                    size_hint_y: None
                    height: self.texture_size[1]    
